    p "Что, блять.."

    if persistent.low == 0:
        show r wtf movie:
            alpha 1.0
            linear 0.1 alpha 0.0
    else:
        show r wtf low:
            alpha 1.0
            linear 0.15 alpha 0.0

    r "Ну? Что скажешь? Разве это не гениально?!"

    if persistent.low == 0:    
        hide r wtf movie
    else:
        hide r wtf low

    menu:

        "Ты ге(ни)й!":

            $ renpy.notify('Доверие Руи к вам увеличилось!')

            p "О боже, Руи ты гениален! {w=0.3}Не могу поверить, что я встречаюсь с кем-то вроде тебя, боже... {w=0.3}Я не заслуживаю этого."

            show rui happy at sd

            r "Ха-ха, не говори ты так, ты же знаешь, как сильно я тебя люблю."

            show rui blush at sd

            r "[player_name]... {w=0.5}Ты не представляешь как мне приятно такое слышать... {w=0.5}Я.. {w=0.2}я.. {w=0.2}я сейчас заплачу... {w=0.5}Я.."

            show rui crazy3 at sd

            r "Я ОТ СЧАСТЬЯ ЩАС ТРУСЫ ВООБЩЕ СНИМУ НАХУЙ!"

            p "Ха-ха, так радуешься комплименту~"

            show rui hello at sd

            r "Хехе... {w=0.5}Слушай, я всю ночь дорабатывал ядерку, а с утра сразу к тебе побежал. Угостишь чем-нибудь?"

            p "Ты ахуел? {w=0.5}Ну ладно.."

        "Хуйня какая-то":

            $ yaderka_huh = True

            p "Хуйня какая-то, а не изобретение."

            show rui sad at sd

            r "[player_name]... Могла бы хотя бы подыграть.."

            show rui sad:
                ease 1.0 xalign 1.5

            r "Я на кухню."

        "А это можно мне в жопу вставить?":

            p "Слушай, а раз ядерка такая маленькая, то её можно мне в жопу вставить?"

            show rui shock at sd

            r "[player_name]... {w=1}У тебя очень странные сексуальные фантазии..."

            p "Ну так можно или нет?"

            show rui sad at sd

            r "Чисто теоретически можно, но ты ведь понимаешь насколько это опасно?"

            p "Ну если не нажимать на пульт, то она не активируется, так?"

            r "Так то оно так, но к чему весь этот разговор?"

            p "Нет времени объяснять, суй ядерку мне в жопу!"

            r "..."

            p "Мне кажется, это будет интересный опыт..."

            show rui hello at sd

            r "[player_name]... {w=0.5}Если тебе хочется новых ощущений, то я могу придумать что-нибудь, что в случае чего не разорвёт тебя на 1000-7 частей."

            r "Я, конечно, уверен в своём изобретении. Но всё же, бомба это не то, что стоит сувать в жопу."

            p "Руи..."

            show rui sad at sd

            r "Почему ты так грустно смотришь... Ты действительно так сильно хочешь трахан трахан чпокен чпокен с ядеркой?"

            p "Да."

            show rui hello at sd

            r "Что ж с тебя взять то... "

            show rui happy at sd

            extend "Ладно уж, пойдём попробуем~"

            jump mi_budem_bum_bum

    stop music fadeout 1.0

    scene bg kitchen talk
    show kitchen talk zorder 10
    with Fade(0.3, 0.5, 0.3)

    play music kitchen fadein 1.5

    r "Ну, а у тебя есть что-нибудь новое?"

    p "Да нет... всё также."

    "Вы смотрите на то, как Руи вытаскивает что-то из вашего холодильника и начинает это есть."

    menu:

        "Возмутиться":

            p "Э! Ты чего мою мороженку жрёшь?"

            if yaderka_huh:

                stop music fadeout 1.5

                show rui angry:
                    xalign -0.5
                    ease 1.5 xalign 0.5

                r "[player_name].. Ты чего такая агрессивная сегодня? {w=0.5}У тебя что, дни взрыва матки?"

                show rui angry:
                    xalign 0.5

                p "Блять, Руи, кто так вообще месячные называет?"

                play sound udar
                with hpunch

                play music nn1 fadein 1.0

                $ rui_pain_add('36')

                r "Не перебивай меня!"

                show rui panic1 at sd

                r "Сначала ты моё изобретение обзываешь, а затем агришься из-за еды, хотя до этого я ни раз тебе покупал всяких вкусняшек..."

                r "О, точно, я ведь ещё и Цукасу рядом с твоим домом видел. {w=0.5}{nw}"

                show rui sad at sd

                extend "Скажи, он ведь к тебе приходил, да? {w=0.3}Я ведь прав?"

                p "Что ты вообще несёшь... Я вообще-{w=0.3}{nw}"

                show rui angry at sd

                play sound udar2
                with vpunch

                $ rui_pain_add('37')

                p "Ау!"

                r "Не ври мне!"

                r "А если так подумать, то всё складывается... {w=0.5}Ты изменяла мне с Цукасой, вы как-то узнали, что я должен прийти, и Цукаса ушёл... Поэтому ты и агришься на меня, ведь я тебя помешал, да?"

                p "Руи..."

                play sound udar
                with hpunch

                $ rui_pain_add('38')

                p "Ай!"

                show rui panic1 at sd

                r "Нет, [player_name], так дело не пойдёт..."

                show rui panic1:
                    ease 0.7 xalign -0.6
                pause 0.7
                show rui panic1 zorder 11:
                    zoom 1.4 xalign -1.0 yalign 0.4
                    ease 0.7 xalign 0.5
                pause 0.6
                show rui ubeysa1 with Dissolve(.1):
                    yalign 0.5 zoom 1.2 xalign 0.5

                window show

                $ rui_pain_add('39')
                
                p "Руи, не-{w=0.3}{nw}"

                play sound udar2
                with vpunch

                stop music

                scene black with Dissolve(.3)

                jump rui_home_poh

            else:

                $ renpy.notify('Фу быть жадным!')

                show rui blush:
                    xalign -0.5
                    ease 1.5 xalign 0.5

                r "Ха-ха, а тебе жалко?"

                show rui blush:
                    xalign 0.5

                p "Ну как-то..."

                show rui hello at sd

                r "Не бойся, я потом тебе ещё куплю."

                p "Ну ладно.."

        "Промолчать":

            p "..."

            show rui hello:
                xalign -0.5
                ease 1.5 xalign 0.5

            r "..."

            show rui hello:
                xalign 0.5

    show rui sad at sd
    
    r "Кстати, я возле твоего дома Цукасу видел... Он же к тебе не приходил?"

    p "Цукаса? Нет, не приходил..."

    if yaderka_huh:

        r "Мне очень хочется в это поверить, [player_name]..."

        p "..."

    else:

        show rui happy at sd

        r "Хорошо. {w=0.3}{i}Я доверяю тебе, [player_name].{/i}"
    
    "Руи доедает и смотрит на вас."

    show rui hello at sd

    r "Что ж... Чем бы ты хотела заняться сейчас?"

    $ rui_not_tsu = True

    jump rui_more

    return

